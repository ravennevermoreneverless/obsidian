views:
  - type: cards
    name: raven's art
    filters:
      and:
        - tagLinks.containsAll(link("art"), link("personal work"))
    order:
      - title
      - dateCreated
      - artDescription
      - artStyle
      - artType
      - mediumUsed
      - tagLinks
      - file.name
      - growth
      - image
    sort:
      - property: file.ctime
        direction: DESC
    columnSize:
      note.title: 339
      note.artist: 106
      note.artDescription: 277
    image: note.image
  - type: cards
    name: raven's art (visual gallery)
    filters:
      and:
        - file.inFolder("2.2 â€” creative projects/raven's brain/visual")
    order:
      - title
    image: note.image
    imageFit: contain
    imageAspectRatio: 1.5
    cardSize: 220
