views:
  - type: tasknotesTaskList
    name: all tasks
    filters:
      and:
        - file.hasTag("task")
    order:
      - file.name
      - scheduled
      - due
      - priority
      - recurrence
      - status
      - timeEntries
      - timeEstimate
    sort:
      - property: priority
        direction: ASC
  - type: tasknotesTaskList
    name: recurring
    filters:
      and:
        - file.hasTag("task")
        - file.hasProperty("recurrence")
    order:
      - file.name
      - scheduled
      - due
      - priority
      - recurrence
      - status
      - timeEntries
      - timeEstimate
    sort:
      - property: priority
        direction: ASC
  - type: tasknotesTaskList
    name: high priority
    filters:
      and:
        - file.hasTag("task")
        - priority == "high"
    order:
      - file.name
      - scheduled
      - due
      - priority
      - recurrence
      - status
      - timeEntries
      - timeEstimate
    sort:
      - property: priority
        direction: ASC
  - type: tasknotesTaskList
    name: normal priority
